rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own favorite stops
    match /users/{userId}/favoriteStops/{stopId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own push tokens
    match /users/{userId}/pushTokens/{tokenId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read public bus data (if any)
    match /busData/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through Cloud Functions
    }
    
    // Allow authenticated users to read GTFS data (if stored in Firestore)
    match /gtfsData/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through Cloud Functions
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}